<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="justgoProviderService" />

	<!-- 使用zookeeper广播注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${zookeeperUrl}" timeout="${zookeeperTimeout}" register="false"/>
	<!-- 	<dubbo:registry address="zookeeper://192.168.125.128:2181?backup=192.168.125.128:2182,192.168.125.128:2183" /> -->

	<!-- 用dubbo协议在40881端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="${dubboPortJustgo}" />
	<!--引用公用service-->
	<import resource="classpath*:conf/reference-dubbo-dev.xml" />

	<dubbo:provider filter="exceptionFilter"></dubbo:provider>

	<dubbo:service interface="com.test.member.service.MemberService" ref="memberService" version="${ver.test}" />
	<bean id="memberService" class="com.test.common.service.impl.MemberServiceImpl" />

</beans>